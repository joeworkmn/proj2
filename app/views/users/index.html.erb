<% if cookies.signed[:authenticated] %>
<table border="1">
  <tr>
   <th>First Name</th><th>Last Name</th>
   <% if cookies.signed[:user_div] == "admin" && cookies.signed[:user_dep] == "admin" %>
     <th>Username</th>
   <% end %>
   <th>Division</th><th>Department</th>
  </tr>
  <% @users.each do |u| %>
    <tr>
      <td><%= u.first_name %></td><td><%= u.last_name %></td>
      <% if cookies.signed[:user_div] == "admin" && cookies.signed[:user_dep] == "admin" %>
        <td><%= u.username %></td>
      <% end %>
      <td><%= u.division %></td><td><%= u.department %></td>
    </tr>
  <% end %>
</table>
  <%=link_to "Main", :controller => "pages", :action => "continue" %>
<% end %>
<% if cookies.signed[:user_div] == "admin" && cookies.signed[:user_dep] == "admin" %>
  <%= link_to "Add User", :controller => "users", :action => "new" %><br />
  <%= link_to "Edit User", :controller => "users", :action => "chooseUser" %>
<% end %>
